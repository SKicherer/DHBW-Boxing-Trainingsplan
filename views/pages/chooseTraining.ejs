<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
    <link rel="stylesheet" href="/css/chooseTraining.css" type="text/css">
</head>

<body id="page-top">

<header>
    <% include ../partials/headerPages %>
</header>

<header>
    <div class="header-chooseTraining">
        <div class="header-content">
            <div class="header-content-inner">
                <h1>Wählen Sie Ihr Training</h1>
            </div>
        </div>
    </div>
</header>

<section class="bg-primary" id="choices">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 text-center">

                <form>
                    <div class="btn-group">
                        Dauer des Trainings?
                        <select id="dauer" type="text" class="form-control btn btn-default dropdown-toggle"
                                data-toggle="dropdown">
                            Trainingsdauer<span class="caret"></span>
                            <option>15 min</option>
                            <option selected>30 min</option>
                            <option>45 min</option>
                            <hr class="light">
                        </select>
                    </div>

                    <div class="btn-group">
                        Ihr Niveau?
                        <select id="niveau" type="button" class="form-control btn btn-default dropdown-toggle"
                                data-toggle="dropdown">
                            Trainingsniveau<span class="caret"></span>
                            <option>Anfänger</option>
                            <option selected>Sportlich</option>
                            <option>Profi</option>
                            <hr class="light">
                        </select>
                    </div>

                    <div class="btn-group">
                        Art des Trainings?
                        <select id="art" type="button" class="form-control btn btn-default dropdown-toggle"
                                data-toggle="dropdown">
                            Ziel<span class="caret"></span>
                            <option selected>Muskelaufbau</option>
                            <option>Kraftausdauer</option>
                            <hr class="light">
                        </select>
                    </div>

                    <hr class="light">

                    <a id="ParamSpeichern" class="btn btn-default btn-xl">Start</a>

                </form>
            </div>
        </div>
    </div>
</section>

<script>
    $(document).ready(function () {
        $("#ParamSpeichern").click(function (event) {

            var dauer = $('#dauer').val();
            if (dauer == "15 min") dauer = 1;
            else if (dauer == "30 min") dauer = 2;
            else if (dauer == "45 min") dauer = 3;

            var niveau = $('#niveau').val();
            if (niveau == "Anfänger") niveau = 1;
            else if (niveau == "Sportlich") niveau = 2;
            else if (niveau == "Profi") niveau = 3;

            var art = $('#art').val();
            if (art == "Muskelaufbau") art = 1;
            else if (art == "Kraftausdauer") art = 2;

            console.log("Dauer: " + dauer);
            console.log("Niveau: " + niveau);
            console.log("Art: " + art);

            window.location.href = "publishTraining?dauer=" + dauer + "&niveau=" + niveau + "&art=" + art;
        });
    });
</script>

<!-- jQuery -->
<script src="/js/jquery.js"></script>
<script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="/bower_components/bootstrap/js/bootstrap.min.js"></script>

<!-- Plugin JavaScript -->
<script src="js/jquery.easing.min.js"></script>
<script src="/js/jquery.fittext.js"></script>
<script src="/js/wow.min.js"></script>

<!-- Custom Theme JavaScript -->
<script src="/bower_components/bootstrap/js/creative.js"></script>
<script src="/js/chooseTraining.js"></script>

</body>
</html>
