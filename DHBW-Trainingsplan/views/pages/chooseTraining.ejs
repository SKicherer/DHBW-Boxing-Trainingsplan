                                <option value="1">Anf√§nger</option>
                                <option value="2">Profi</option>
                            </select>
                        </div>
                    </div>

                    <p></p>
                    <div class="btn-group">
                        <div id="possibleTypes">
                            <p>Art des Trainings?</p>
                            <select id="type" name="type" type="button"
                                    class="form-control btn btn-default dropdown-toggle"
                                    data-toggle="dropdown">
                                <option value="0" selected></option>
                                <option value="1">Muskelaufbau</option>
                                <option value="2">Kraftausdauer</option>
                            </select>
                        </div>
                    </div>
                </form>
                <p></p>

                <hr>

                <div class="btn-group">
                    <div id="nextSite">
                        <a href="publishTraining" class="btn btn-default btn-xl" role="button">Start</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

<jsFooter>
    <% include ../partials/jsFooter %>
</jsFooter>

</body>
</html>
